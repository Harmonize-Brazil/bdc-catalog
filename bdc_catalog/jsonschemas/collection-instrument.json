{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "collection-instrument.json#",
    "title": "",
    "type": "object",
    "description": "This object represents the platform for a collection in a Brazil Data Cube Database.",
    "allOf": [
        {
            "$ref": "#/definitions/platform"
        }
    ],
    "definitions": {
        "platform": {
            "type": "object",
            "required": [],
            "properties": {
                "code": {
                    "title": "Code / Name",
                    "description": "Describes the satellite platform",
                    "type": "string",
                    "enum": [
                        "Landsat-4",
                        "Landsat-5",
                        "Landsat-7",
                        "Landsat-8",
                        "Sentinel-1",
                        "Sentinel-2",
                        "CBERS-2",
                        "CBERS-4",
                        "CBERS-4A",
                        "Terra",
                        "Aqua"
                    ]
                },
                "instrument": {
                    "title": "Instrument / Sensor",
                    "description": "Describes the satellite sensor",
                    "type": "string",
                    "enum": [
                        "TM",
                        "ETM",
                        "OLI",
                        "TIRS",
                        "OLI/TIRS",
                        "MSI",
                        "PAN",
                        "MUX",
                        "WFI",
                        "AWFI",
                        "MODIS"
                    ]
                },
                "geometry_processing": {
                    "title": "Geometry Processing",
                    "description": "",
                    "type": "string",
                    "enum": [
                        "ortho"
                    ]
                },
                "radiometry_processing": {
                    "title": "Radiometry Processing",
                    "description": "Describes the radiometric processing level",
                    "type": "string",
                    "enum": [
                        "DN",
                        "TOA",
                        "SR",
                        "BT",
                        "ST"
                    ]
                }
            }
        }
    }
}
