{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "band-eo.json",
    "type": "object",
    "title": "STAC Extension for Electro-Optical Specification",
    "description": "Represent the STAC EO Extension for any collection with spectral bands. Follows the JSONSchema https://github.com/stac-extensions/eo/blob/v1.0.0/json-schema/schema.json.",
    "properties": {
        "eo:cloud_cover": {
            "title": "Cloud Cover",
            "type": "number",
            "minimum": 0,
            "maximum": 100
        },
        "eo:bands": {
            "bands": {
                "title": "Bands",
                "type": "array",
                "minItems": 1,
                "items": {
                    "title": "Band",
                    "type": "object",
                    "minProperties": 1,
                    "properties": {
                        "name": {
                            "title": "Name of the band",
                            "type": "string"
                        },
                        "common_name": {
                            "title": "Common Name of the band",
                            "type": "string"
                        },
                        "center_wavelength": {
                            "title": "Center Wavelength",
                            "type": "number"
                        },
                        "full_width_half_max": {
                            "title": "Full Width Half Max (FWHM)",
                            "type": "number"
                        },
                        "solar_illumination": {
                            "title": "Solar Illumination",
                            "type": "number"
                        }
                    }
                }
            }
        }
    },
    "patternProperties": {
        "^(?!eo:)": {

        }
    },
    "additionalProperties": false
}