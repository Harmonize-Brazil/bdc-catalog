{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "band-sar.json",
    "type": "object",
    "title": "STAC Extension for SAR Specification",
    "description": "Represent the STAC SAR Extension for any collection with Synthetic-Aperture Radar. Follows the JSONSchema https://github.com/stac-extensions/sar/blob/v1.0.0/json-schema/schema.json.",
    "properties": {
        "sar:instrument_mode": {
            "title": "Instrument Mode",
            "type": "string",
            "examples": [
                "WV"
            ],
            "minLength": 1,
            "example": "WV"
        },
        "sar:frequency_band": {
            "title": "Frequency Band",
            "type": "string",
            "enum": [
                "P",
                "L",
                "S",
                "C",
                "X",
                "Ku",
                "K",
                "Ka"
            ]
        },
        "sar:center_frequency": {
            "title": "Center Frequency (GHz)",
            "type": "number"
        },
        "sar:polarizations": {
            "title": "Polarizations",
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "enum": [
                    "HH",
                    "VV",
                    "HV",
                    "VH"
                ]
            }
        },
        "sar:product_type": {
            "title": "Product type",
            "type": "string",
            "minLength": 1,
            "examples": [
                "SSC",
                "MGD",
                "SGC"
            ]
        },
        "sar:resolution_range": {
            "title": "Resolution range (m)",
            "type": "number",
            "minimum": 0
        },
        "sar:resolution_azimuth": {
            "title": "Resolution azimuth (m)",
            "type": "number",
            "minimum": 0
        },
        "sar:pixel_spacing_range": {
            "title": "Pixel spacing range (m)",
            "type": "number",
            "minimum": 0
        },
        "sar:pixel_spacing_azimuth": {
            "title": "Pixel spacing azimuth (m)",
            "type": "number",
            "minimum": 0
        },
        "sar:looks_range": {
            "title": "Looks range",
            "type": "integer",
            "minimum": 0
        },
        "sar:looks_azimuth": {
            "title": "Looks azimuth",
            "type": "integer",
            "minimum": 0
        },
        "sar:looks_equivalent_number": {
            "title": "Equivalent number of looks (ENL)",
            "type": "number",
            "minimum": 0
        },
        "sar:observation_direction": {
            "title": "Antenna pointing direction",
            "type": "string",
            "enum": [
                "left",
                "right"
            ]
        }
    },
    "patternProperties": {
        "^(?!sar:)": {
            "$comment": "Do not allow unspecified fields prefixed with sar:"
        }
    },
    "additionalProperties": false
}